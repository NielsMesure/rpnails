{% extends 'base.html.twig' %}


{% block content %}

    <style>
        .fc .fc-prev-button::after,
        .fc .fc-next-button::after {
            content: '';
            display: inline-block;
            border: solid black;
            border-width: 0 2px 2px 0;
            padding: 3px;
        }

        .fc .fc-prev-button::after {
            transform: rotate(135deg); /* Flèche gauche */
            -webkit-transform: rotate(135deg);
            border-color: white;
        }

        .fc .fc-next-button::after {
            transform: rotate(-45deg); /* Flèche droite */
            -webkit-transform: rotate(-45deg);
            border-color: white;
        }
        .fc {
            background-color: rgba(108, 105, 105, 0.6);
            color: #ffffff;
            border-radius: 1%;
            padding: 25px;

        }
    </style>
    <div id="calendar"></div>


    {{ encore_entry_script_tags('app') }}


    <!-- OffCanvas Bootstrap pour l'absence -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="absenceOffCanvas" aria-labelledby="absenceOffCanvasLabel">
        <div class="offcanvas-header">
            <h5 id="absenceOffCanvasLabel">Ajouter une Absence</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form id="absenceForm">
                <div class="form-group">
                    <label for="absenceDate">Date</label>
                    <input type="date" class="form-control" id="absenceDate" name="date">
                </div>

                <label for="absenceStartTime" class="col-form-label">Heure de début</label>
                <div class="form-group row">

                    <div class="col-5">
                        <select id="absenceStartHour" name="startHour" class="form-control">
                            {% for hour in 9..21 %}
                                <option value="{{ '%02d'|format(hour) }}">{{ '%02d'|format(hour) }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-5">
                        <select id="absenceStartMinute" name="startMinute" class="form-control">
                            <option value="00">00</option>
                            <option value="30">30</option>
                        </select>
                    </div>
                </div>
                <label for="absenceEndTime" class="col-form-label">Heure de fin</label>
                <div class="form-group row">
                    <div class="col-5">
                        <select id="absenceEndHour" name="endHour" class="form-control">
                            {% for hour in 9..21 %}
                                <option value="{{ '%02d'|format(hour) }}">{{ '%02d'|format(hour) }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-5">
                        <select id="absenceEndMinute" name="endMinute" class="form-control">
                            <option value="00">00</option>
                            <option value="30">30</option>
                        </select>
                    </div>
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="allDay" name="allDay">
                    <label class="form-check-label" for="allDay">Toute la journée</label>
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <button type="button" class="btn btn-danger mt-3" id="deleteAbsenceButton" style="display: none;">
                    Supprimer l'absence
                </button>


            </form>
        </div>
    </div>





{% endblock %}
