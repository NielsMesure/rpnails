{% extends 'base.html.twig' %}


{% block content %}

    <style>
        .fc .fc-prev-button::after,
        .fc .fc-next-button::after {
            content: '';
            display: inline-block;
            border: solid black;
            border-width: 0 2px 2px 0;
            padding: 3px;
        }

        .fc .fc-prev-button::after {
            transform: rotate(135deg); /* Flèche gauche */
            -webkit-transform: rotate(135deg);
            border-color: white;
        }

        .fc .fc-next-button::after {
            transform: rotate(-45deg); /* Flèche droite */
            -webkit-transform: rotate(-45deg);
            border-color: white;
        }
        .fc {
            background-color: rgba(108, 105, 105, 0.6);
            color: #ffffff;
            border-radius: 1%;
            padding: 25px;

        }
    </style>
    <div id="calendar"></div>


    {{ encore_entry_script_tags('app') }}


    <!-- OffCanvas Bootstrap pour l'absence -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="absenceOffCanvas" aria-labelledby="absenceOffCanvasLabel">
        <div class="offcanvas-header">
            <h5 id="absenceOffCanvasLabel">Ajouter une Absence</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form id="absenceForm">
                <div class="form-group">
                    <label for="absenceDate">Date</label>
                    <input type="date" class="form-control" id="absenceDate" name="date">
                </div>

                <div class="form-group">
                    <label for="startTime">Heure de début</label>
                    <input type="time" class="form-control" id="startTime" name="startTime">
                </div>

                <div class="form-group">
                    <label for="endTime">Heure de fin</label>
                    <input type="time" class="form-control" id="endTime" name="endTime">
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="allDay" name="allDay">
                    <label class="form-check-label" for="allDay">Toute la journée</label>
                </div>

                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
        </div>
    </div>





{% endblock %}
