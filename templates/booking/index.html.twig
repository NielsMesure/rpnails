{% extends 'base.html.twig' %}

{% block title %}Réserver{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <h2 class="mb-3"> Choisissez votre prestation</h2>
            <div id="prestations">
                <div class="container text-center">
                    <div class="row justify-content-center">

                        {% for prestation in prestations %}
                            <div class="col-md-6 col-lg-4 col-xxl-3 p-0 mt-3">
                                <div class="card card-booking m-auto shadow" style="width: 18rem; height: 12rem">
                                    <div class="card-body d-flex flex-column justify-content-between"> <!-- Utilisez justify-content-between pour répartir également l'espace -->
                                        <div>
                                            <h5 class="card-title mt-2" style="color: white">{{ prestation.name }}</h5>
                                            {% set hours = (prestation.duration // 60) %}
                                            {% set minutes = (prestation.duration % 60) %}
                                            <p class="card-text mt-3 mb-2" style="color: #E8E8E8FF">
                                                <strong>Durée : </strong>
                                                {% if hours > 0 %}
                                                    {{ hours }} heure(s)
                                                    {% if minutes > 0 %}
                                                        et {{ minutes }} minute(s)
                                                    {% endif %}
                                                {% else %}
                                                    {{ minutes }} minute(s)
                                                {% endif %}
                                            </p>
                                            <p class="card-text " style="color: #e8e8e8">
                                                <strong>Prix : </strong> {{ prestation.price }} euros
                                            </p>
                                        </div>
                                        <button href="#" class="btn custom-submit prestation-btn mt-auto"  data-name="{{ prestation.name }}" data-duration="{{ prestation.duration }}" data-id="{{ prestation.id }}">Réserver</button>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row ">

            <div id="dateSelector" style="display:none; justify-content: center; align-items: center;" class="mt-4">
                <button id="prevWeek" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                        <path d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1"/>
                    </svg>
                </button>
                <div id="dateContainer"  style="overflow-x: auto;"></div>
                <button id="nextWeek" ><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-right-square-fill" viewBox="0 0 16 16">
                        <path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1"/>
                    </svg>
                </button>
            </div>

            <div id="availableTimes" class="text-center mt-4">
                <!-- Les créneaux horaires disponibles seront affichés ici -->
            </div>
            <div id="scroll-anchor"></div>

        </div>

        <!-- Modale de réservation -->
        <div class="modal" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content booking-modal">
                    <div class="modal-header shadow border-bottom-0">
                        <h5 class="modal-title" id="bookingModalLabel">Confirmation de réservation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="bookingForm">
                            <h4 class="pt-2">Réservation du <span id="bookingDateFormated"></span> à <span id="bookingTime"></span></h4>
                            <p class="mt-3 mb-0"> Prestation : <span type="text" id="serviceName"></span></p>
                            <p>Durée maximale : <span id="serviceDuration" class="form-label"></span></p>

                            <h4 class="text-center mt-4">Vos informations</h4>
                            <div class="mb-3">
                                <label for="customerName" class="form-label">Nom</label>
                                <input type="text" class="form-control booking-form" id="customerName" value="{% if app.user %}{{ app.user.lastname }}{% endif%}" required>
                            </div>
                            <div class="mb-3">
                                <label for="customerSurname" class="form-label">Prénom</label>
                                <input type="text" class="form-control booking-form" id="customerSurname" value="{% if app.user %}{{ app.user.firstname }}{% endif%}" required>
                            </div>
                            <div class="mb-3">
                                <label for="customerPhone" class="form-label">Numéro de téléphone</label>
                                <input type="text" class="form-control booking-form" id="customerPhone" value="+33{% if app.user %}{{ app.user.mobilephone }}{% endif%}" required>
                            </div>
                            <div class="mb-3">
                                <label for="customerEmail" class="form-label">Email</label>
                                <input type="text" class="form-control booking-form" id="customerEmail" value="{% if app.user %}{{ app.user.email }}{% endif%}" required>
                            </div>
                            <!-- Ajoutez d'autres champs si nécessaire -->

                            <button type="submit" class="btn custom-submit text-white">Confirmer la réservation</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
