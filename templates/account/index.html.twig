{% extends 'base.html.twig' %}


{% block content %}
    <div class="container">
        <div class="row">
            <h1>Prochaines réservations</h1>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for booking in bookings %}
                    {% set bookingDateTime = booking.date | date('d F Y')%}
                    {% if bookingDateTime > "now"|date('d F Y') %}
                        <div class="col">
                            <div class="card w-75">
                                <div class="card-body">
                                    <h5 class="card-title">{{ booking.prestation.name }}</h5>
                                    <p class="card-text">Date : <span>{{ booking.date | date('d F Y')}}</span></p>
                                    <p class="card-text">Heure : {{ booking.startTime | date('H:i')}}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <h1>Réservations passées</h1>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for booking in bookings %}
                    {% set bookingDateTime = booking.date | date('d F Y')%}
                    {% if bookingDateTime <= "now"|date('d F Y') %}
                        <div class="col">
                            <div class="card w-75">
                                <div class="card-body">
                                    <h5 class="card-title">{{ booking.prestation.name }}</h5>
                                    <p class="card-text">Date : <span>{{ booking.date | date('d F Y')}}</span></p>
                                    <p class="card-text">Heure : {{ booking.startTime | date('H:i')}}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

