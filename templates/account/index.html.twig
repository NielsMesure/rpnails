{% extends 'base.html.twig' %}


{% block content %}
    <div class="container">
        {% set futureBookings = bookings | filter(booking => booking.date|date('Y-m-d') > "now"|date('Y-m-d')) %}
        {% set pastBookings = bookings | filter(booking => booking.date|date('Y-m-d') <= "now"|date('Y-m-d')) %}

        {% if futureBookings|length > 0 %}
            <div class="row">
                <h1>Prochaines réservations</h1>
                <div class="row row-cols-1 row-cols-md-3">
                    {% for booking in futureBookings %}
                        <div class="col">
                            <div class="card w-75">
                                <div class="card-body">
                                    <h5 class="card-title">{{ booking.prestation.name }}</h5>
                                    <p class="card-text">Date : <span>{{ booking.date | date('d F Y')}}</span></p>
                                    <p class="card-text">Heure : {{ booking.startTime | date('H:i')}}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p>Vous n'avez pas de futures réservations.</p>
        {% endif %}


        {% if pastBookings|length > 0 %}
            <div class="row g-4">
                <h1>Réservations passées</h1>
                <div class="row row-cols-1 row-cols-md-3">
                    {% for booking in pastBookings %}
                        <div class="col">
                            <div class="card w-75">
                                <div class="card-body">
                                    <h5 class="card-title">{{ booking.prestation.name }}</h5>
                                    <p class="card-text">Date : <span>{{ booking.date | date('d F Y')}}</span></p>
                                    <p class="card-text">Heure : {{ booking.startTime | date('H:i')}}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <p class="mt-4">Vous n'avez pas de réservations passées.</p>
        {% endif %}
    </div>
{% endblock %}


